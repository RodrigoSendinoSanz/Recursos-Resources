import java.io.FileWriter;
import java.io.IOException;

public class Main {

	public static void main(String[] args) {
		// leer archivos
		try {
			FileWriter escribir = new FileWriter("saludo.txt");
			escribir.write("Hola Mundo");
			escribir.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
